{% extends 'base.html.twig' %}

{% block title %}
    Garage V. Parrot - Connexion
{% endblock %}

{% block body %}
    <section class="container my-3">
        <div class="row">
            <h1 class="mb-3 font-weight-normal">Me connecter</h1>
            <div class="col-md-8 mx-auto">
                <form method="post" name="login">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <label for="inputEmail" class="mt-4">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus placeholder="exemple@mail.fr">

                    <label for="inputPassword" class="mt-4">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mt-2" autocomplete="current-password" required placeholder="********">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="d-flex justify-content-evenly mt-4">
                        <button class="btn btn-primary" type="submit">Connexion</button>
                        <!--<a href="{{ path('app_register') }}" class="btn btn-outline-secondary">M'inscrire</a>-->
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}